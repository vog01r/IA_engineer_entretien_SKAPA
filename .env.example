API_KEY=your_api_key_here
DATABASE_URL=sqlite:///database.db
DEBUG=false

OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4o-mini
ANTHROPIC_API_KEY=sk-ant-...
TELEGRAM_BOT_TOKEN=123456:ABC-DEF...
API_BASE_URL=http://127.0.0.1:8000
# Intervalle vérification alertes en secondes (défaut 3600 = 1h). Test : 60 ou 300
ALERT_CHECK_INTERVAL_SEC=3600
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# JWT Configuration (CRITICAL: Generate secure secret with `openssl rand -hex 64`)
JWT_SECRET=your_jwt_secret_here_CHANGE_THIS_IN_PRODUCTION
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Cookie Configuration (httpOnly cookies for XSS protection)
COOKIE_SECURE=false  # Set to true in production (HTTPS required)
COOKIE_SAMESITE=lax  # lax = CSRF protection, strict = more secure but breaks some flows
COOKIE_DOMAIN=  # Leave empty for same-domain only

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=100
